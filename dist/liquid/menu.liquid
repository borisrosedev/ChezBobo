                            <section>
                            <span aria-label="Nom du produit">{{product.name}}</span>
                            {%  if product.price %}
                            <span aria-lable="Prix du produit">{{product.price}} â‚¬</span>
                            {%  endif %}
                            </section>
                        </figure>
                    </article>
                {% endfor %}
            </section>
        </main>
    </body>

</html>


